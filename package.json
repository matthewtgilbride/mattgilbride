{
  "license": "MIT",
  "dependencies": {
    "commitizen": "^4.0.4",
    "gatsby-cli": "^2.11.11",
    "lerna": "^3.20.2"
  },
  "name": "mgilbride",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "commit": "yarn tsc && yarn test && yarn lint && git-cz",
    "lint": "lerna run lint --stream --",
    "test": "lerna run test --stream --",
    "tsc": "lerna run tsc --stream",
    "format": "yarn tsc && yarn lint --fix",
    "develop": "lerna run develop --scope=@mgilbride/mgilbride --stream"
  },
  "devDependencies": {
    "cz-conventional-changelog": "3.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
